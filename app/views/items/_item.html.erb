<table>
  <tr>
    <th>
      Description
    </th>
    <th>
      Days left
    </th>
    <th>
      Complete
    </th>
  </tr>
<% if !all_items.empty? %>
  <% all_items.each do |item| %>
    <tr>
      <td>
        <%= item.name %>
      </td>
    </tr>
  <% end %>
<tfoot>
  <tr>
    <td colspan="3">
      <%= render partial: 'items/form' %>
    </td>
  </tr>
</tfoot>
  </table>
<% else %>
  <tfoot>
    <tr>
      <td colspan="3">
        <%= render partial: 'items/form', locals: {user: @user, item: @item } %>
      </td>
    </tr>
  </tfoot>
</table>
<%end%>
